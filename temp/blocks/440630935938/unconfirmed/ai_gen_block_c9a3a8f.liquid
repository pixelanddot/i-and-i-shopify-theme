{% doc %}
  @prompt
    Another image block
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-block-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: {{ block.settings.image_fit }};
    {% if block.settings.image_fit == 'cover' %}
      aspect-ratio: {{ block.settings.aspect_ratio }};
    {% endif %}
  }

  .ai-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.aspect_ratio }};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  {% if block.settings.enable_link %}
    .ai-image-link-{{ ai_gen_id }} {
      display: block;
      cursor: pointer;
      transition: opacity 0.3s ease;
    }

    .ai-image-link-{{ ai_gen_id }}:hover {
      opacity: {{ block.settings.hover_opacity | divided_by: 100.0 }};
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-image-block-{{ ai_gen_id }} {
      max-width: 100%;
    }
  }
{% endstyle %}

<div class="ai-image-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.enable_link and block.settings.link_url != blank %}
    <a href="{{ block.settings.link_url }}" class="ai-image-link-{{ ai_gen_id }}">
      <div class="ai-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 2000 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
        {% else %}
          <div class="ai-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-image-empty-state-{{ ai_gen_id }}">
              Add an image to get started
            </div>
          </div>
        {% endif %}
      </div>
    </a>
  {% else %}
    <div class="ai-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 2000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% else %}
        <div class="ai-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-image-empty-state-{{ ai_gen_id }}">
            Add an image to get started
          </div>
        </div>
      {% endif %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Image",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Image settings"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 400,
      "max": 1600,
      "step": 100,
      "unit": "px",
      "label": "Maximum width",
      "default": 1600
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Image fit",
      "options": [
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "cover",
          "label": "Cover"
        }
      ],
      "default": "cover"
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Aspect ratio",
      "options": [
        {
          "value": "16/9",
          "label": "16:9"
        },
        {
          "value": "4/3",
          "label": "4:3"
        },
        {
          "value": "1/1",
          "label": "1:1"
        },
        {
          "value": "3/4",
          "label": "3:4"
        },
        {
          "value": "2/3",
          "label": "2:3"
        }
      ],
      "default": "16/9",
      "info": "Only applies when image fit is set to Cover"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Link settings"
    },
    {
      "type": "checkbox",
      "id": "enable_link",
      "label": "Enable link",
      "default": false
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "range",
      "id": "hover_opacity",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Hover opacity",
      "default": 85,
      "info": "Only applies when link is enabled"
    }
  ],
  "presets": [
    {
      "name": "Image"
    }
  ]
}
{% endschema %}
