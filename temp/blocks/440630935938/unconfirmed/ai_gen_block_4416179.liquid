{% doc %}
  @prompt
    A magazine-style editorial layout
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-layout-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.spacing_vertical }}px {{ block.settings.spacing_horizontal }}px;
  }

  .ai-editorial-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    align-items: start;
  }

  .ai-editorial-featured-{{ ai_gen_id }} {
    grid-column: span 7;
    position: relative;
  }

  .ai-editorial-featured-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_radius }}px;
  }

  .ai-editorial-featured-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 3 / 4;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-editorial-featured-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-featured-content-{{ ai_gen_id }} {
    margin-top: {{ block.settings.content_spacing }}px;
  }

  .ai-editorial-category-{{ ai_gen_id }} {
    font-size: {{ block.settings.category_size }}px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: {{ block.settings.category_color }};
    margin-bottom: 12px;
    display: block;
    font-weight: 600;
  }

  .ai-editorial-featured-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.featured_title_size }}px;
    line-height: 1.2;
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
  }

  .ai-editorial-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.excerpt_size }}px;
    line-height: 1.6;
    color: {{ block.settings.excerpt_color }};
    margin-bottom: 20px;
  }

  .ai-editorial-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: {{ block.settings.meta_size }}px;
    color: {{ block.settings.meta_color }};
  }

  .ai-editorial-author-{{ ai_gen_id }} {
    font-weight: 600;
  }

  .ai-editorial-date-{{ ai_gen_id }} {
    opacity: 0.7;
  }

  .ai-editorial-sidebar-{{ ai_gen_id }} {
    grid-column: span 5;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.sidebar_gap }}px;
  }

  .ai-editorial-sidebar-item-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 20px;
    align-items: start;
  }

  .ai-editorial-sidebar-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    border-radius: {{ block.settings.sidebar_image_radius }}px;
  }

  .ai-editorial-sidebar-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.sidebar_image_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-sidebar-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-sidebar-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-editorial-sidebar-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.sidebar_title_size }}px;
    line-height: 1.3;
    margin: 0;
    color: {{ block.settings.text_color }};
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
  }

  .ai-editorial-sidebar-meta-{{ ai_gen_id }} {
    font-size: {{ block.settings.sidebar_meta_size }}px;
    color: {{ block.settings.meta_color }};
    opacity: 0.7;
  }

  .ai-editorial-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
    display: block;
  }

  .ai-editorial-link-{{ ai_gen_id }}:hover .ai-editorial-featured-title-{{ ai_gen_id }},
  .ai-editorial-link-{{ ai_gen_id }}:hover .ai-editorial-sidebar-title-{{ ai_gen_id }} {
    opacity: 0.7;
  }

  .ai-editorial-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 989px) {
    .ai-editorial-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-editorial-featured-{{ ai_gen_id }},
    .ai-editorial-sidebar-{{ ai_gen_id }} {
      grid-column: span 1;
    }

    .ai-editorial-featured-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.featured_title_size }}px * 0.8);
    }

    .ai-editorial-sidebar-item-{{ ai_gen_id }} {
      grid-template-columns: 100px 1fr;
      gap: 16px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-editorial-layout-{{ ai_gen_id }} {
      padding: {{ block.settings.spacing_vertical | times: 0.7 }}px {{ block.settings.spacing_horizontal | times: 0.7 }}px;
    }

    .ai-editorial-featured-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.featured_title_size }}px * 0.65);
    }

    .ai-editorial-sidebar-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.sidebar_title_size }}px * 0.9);
    }

    .ai-editorial-sidebar-item-{{ ai_gen_id }} {
      grid-template-columns: 80px 1fr;
      gap: 12px;
    }
  }
{% endstyle %}

<div class="ai-editorial-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-editorial-grid-{{ ai_gen_id }}">
    <div class="ai-editorial-featured-{{ ai_gen_id }}">
      {% if block.settings.featured_article %}
        <a href="{{ block.settings.featured_article.url }}" class="ai-editorial-link-{{ ai_gen_id }}">
          {% if block.settings.featured_article.image %}
            <img
              src="{{ block.settings.featured_article.image | image_url: width: 1200 }}"
              alt="{{ block.settings.featured_article.image.alt | escape }}"
              class="ai-editorial-featured-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.featured_article.image.width }}"
              height="{{ block.settings.featured_article.image.height }}"
            >
          {% else %}
            <div class="ai-editorial-featured-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}

          <div class="ai-editorial-featured-content-{{ ai_gen_id }}">
            {% if block.settings.show_category and block.settings.featured_article.tags.size > 0 %}
              <span class="ai-editorial-category-{{ ai_gen_id }}">{{ block.settings.featured_article.tags.first }}</span>
            {% endif %}

            <h2 class="ai-editorial-featured-title-{{ ai_gen_id }}">{{ block.settings.featured_article.title }}</h2>

            {% if block.settings.show_excerpt and block.settings.featured_article.excerpt != blank %}
              <div class="ai-editorial-excerpt-{{ ai_gen_id }}">
                {{ block.settings.featured_article.excerpt | strip_html | truncate: 180 }}
              </div>
            {% endif %}

            {% if block.settings.show_meta %}
              <div class="ai-editorial-meta-{{ ai_gen_id }}">
                {% if block.settings.featured_article.author != blank %}
                  <span class="ai-editorial-author-{{ ai_gen_id }}">{{ block.settings.featured_article.author }}</span>
                {% endif %}
                <span class="ai-editorial-date-{{ ai_gen_id }}">{{ block.settings.featured_article.published_at | date: '%B %d, %Y' }}</span>
              </div>
            {% endif %}
          </div>
        </a>
      {% else %}
        <div class="ai-editorial-featured-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-editorial-empty-state-{{ ai_gen_id }}">
            Select a featured article
          </div>
        </div>
        <div class="ai-editorial-featured-content-{{ ai_gen_id }}">
          <span class="ai-editorial-category-{{ ai_gen_id }}">Category</span>
          <h2 class="ai-editorial-featured-title-{{ ai_gen_id }}">Featured Article Title</h2>
          <div class="ai-editorial-excerpt-{{ ai_gen_id }}">
            This is where your featured article excerpt will appear. Select an article to get started.
          </div>
          <div class="ai-editorial-meta-{{ ai_gen_id }}">
            <span class="ai-editorial-author-{{ ai_gen_id }}">Author Name</span>
            <span class="ai-editorial-date-{{ ai_gen_id }}">December 6, 2025</span>
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-editorial-sidebar-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign article_key = 'sidebar_article_' | append: i
          assign article = block.settings[article_key]
        %}

        {% if article %}
          <a href="{{ article.url }}" class="ai-editorial-link-{{ ai_gen_id }}">
            <div class="ai-editorial-sidebar-item-{{ ai_gen_id }}">
              <div>
                {% if article.image %}
                  <img
                    src="{{ article.image | image_url: width: 240 }}"
                    alt="{{ article.image.alt | escape }}"
                    class="ai-editorial-sidebar-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="120"
                    height="120"
                  >
                {% else %}
                  <div class="ai-editorial-sidebar-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-editorial-sidebar-content-{{ ai_gen_id }}">
                {% if block.settings.show_category and article.tags.size > 0 %}
                  <span class="ai-editorial-category-{{ ai_gen_id }}">{{ article.tags.first }}</span>
                {% endif %}
                <h3 class="ai-editorial-sidebar-title-{{ ai_gen_id }}">{{ article.title }}</h3>
                {% if block.settings.show_meta %}
                  <div class="ai-editorial-sidebar-meta-{{ ai_gen_id }}">
                    {{ article.published_at | date: '%b %d, %Y' }}
                  </div>
                {% endif %}
              </div>
            </div>
          </a>
        {% else %}
          <div class="ai-editorial-sidebar-item-{{ ai_gen_id }}">
            <div class="ai-editorial-sidebar-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
            <div class="ai-editorial-sidebar-content-{{ ai_gen_id }}">
              <span class="ai-editorial-category-{{ ai_gen_id }}">Category</span>
              <h3 class="ai-editorial-sidebar-title-{{ ai_gen_id }}">Article Title {{ i }}</h3>
              <div class="ai-editorial-sidebar-meta-{{ ai_gen_id }}">Dec 6, 2025</div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

